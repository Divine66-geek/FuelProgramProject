<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.LoginController">
    <children>
        <!-- ðŸŒ„ Background Image -->
        <ImageView fx:id="backgroundImage" fitWidth="800" fitHeight="600" preserveRatio="false">
            <image>
                <Image url="@images/background.png" />
            </image>
        </ImageView>

        <!-- ðŸ’» Login Form -->
        <VBox spacing="10" alignment="CENTER" maxWidth="250"
              style="-fx-background-color: black; -fx-background-radius: 10; -fx-padding: 30;">
            <children>
                <Label text="BP"
                       style="-fx-font-size: 24px; -fx-text-fill: green; -fx-font-weight: bold;"/>
                
                <Label text="Welcome Back"
                       style="-fx-font-size: 24px; -fx-text-fill: green; -fx-font-weight: bold;"/>

                <TextField fx:id="usernameField" promptText="Username"
                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10;"/>

                <PasswordField fx:id="passwordField" promptText="Password" onAction="#onEnterPressed"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10;"/>

                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />

                <HBox spacing="10" alignment="CENTER">
                    <Hyperlink text="Forgot Password?" onAction="#goToForgotPassword" style="-fx-text-fill: #3498db;"/>
                    <Label text="|" style="-fx-text-fill: #7f8c8d;"/>
                    <Hyperlink text="Register" onAction="#goToRegister" style="-fx-text-fill: #3498db;"/>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
