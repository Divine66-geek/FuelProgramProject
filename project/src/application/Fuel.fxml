<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.FuelController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: black; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Title -->
    <Label text="Fuel Purchase"
           style="-fx-font-size: 24px; -fx-text-fill: #1abc9c; -fx-font-weight: bold;" />

    <!-- Fuel Type -->
    <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="250">
        <Label text="Select Fuel Type"
               style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
        <ComboBox fx:id="fuelTypeCombo" prefWidth="250"
                  promptText="Choose fuel type..." />
    </VBox>

    <!-- Liters Input -->
    <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="250">
        <Label text="Enter Liters"
               style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
        <TextField fx:id="litersField" promptText="e.g. 50"
                   prefWidth="250" />
    </VBox>

    <!-- Proceed Button -->
    <Button text="Proceed to Payment"
            onAction="#proceedToPayment"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" />

</VBox>
