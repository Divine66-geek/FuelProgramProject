<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.RegisterController" style="-fx-background-color: linear-gradient(to bottom right, #8e44ad, #3498db);">
    <children>
        <VBox spacing="15" alignment="CENTER" maxWidth="400" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
            <children>
                <Label text="Create Your Profile" style="-fx-font-size: 22px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>

                <HBox spacing="10">
                    <TextField fx:id="firstNameField" promptText="First Name" style="-fx-background-radius: 5; -fx-padding: 10;"/>
                    <TextField fx:id="lastNameField" promptText="Last Name" style="-fx-background-radius: 5; -fx-padding: 10;"/>
                </HBox>

                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 5; -fx-padding: 10;"/>
                <TextField fx:id="companyField" promptText="Company" style="-fx-background-radius: 5; -fx-padding: 10;"/>
                <TextField fx:id="websiteField" promptText="Website" style="-fx-background-radius: 5; -fx-padding: 10;"/>
                <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 5; -fx-padding: 10;"/>
                <TextField fx:id="phoneField" promptText="Phone Number" style="-fx-background-radius: 5; -fx-padding: 10;"/>

               <Button text="Register" onAction="#goToCarDetails"
               style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;"/>                <Hyperlink fx:id="loginLink" text="Already have an account? Login" onAction="#goToLogin" style="-fx-text-fill: #3498db;"/>            </children>
        </VBox>
    </children>
</StackPane>

