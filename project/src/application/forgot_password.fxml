<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.ForgotPasswordController"
           style="-fx-background-color: linear-gradient(to bottom right, #1abc9c, #2c3e50);">
    <children>
        <VBox spacing="20" alignment="CENTER" maxWidth="350"
              style="-fx-background-color: black; -fx-background-radius: 12; -fx-padding: 30;">
            <children>
                <Label text="Reset Your Password"
                       style="-fx-font-size: 22px; -fx-text-fill: #1abc9c; -fx-font-weight: bold;"/>

                <Label text="Please enter your username to reset your password."
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>

                <TextField fx:id="usernameField" promptText="Username"
                           style="-fx-background-radius: 6; -fx-padding: 10;"/>

                <Button text="Send Reset Link" onAction="#handleReset"
                        style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 10;"/>

                <Label fx:id="messageLabel" text="" wrapText="true"
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>

                <Hyperlink text="Back to Login" onAction="#goToLogin"
                           style="-fx-text-fill: #3498db;"/>
            </children>
        </VBox>
    </children>
</StackPane>
